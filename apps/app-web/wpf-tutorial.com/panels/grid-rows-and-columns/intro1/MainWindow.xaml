<Window x:Class="intro1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:intro1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button>Button 1 (Top Left)</Button>
        <Button Grid.Column="1">Button 2 (Top Middle)</Button>
        <Button Grid.Column="2">Button 3 (Top Right)</Button>
        <Button Grid.Row="1">Button 4 (Middle Left)</Button>
        <Button Grid.Column="1" Grid.Row="1">Button 5 (Middle Middle)</Button>
        <Button Grid.Column="2" Grid.Row="1">Button 6 (Middle Right)</Button>
        <Button Grid.Row="2">Button 7 (Bottom Left)</Button>
        <Button Grid.Column="1" Grid.Row="2">Button 8 (Bottom Middle)</Button>
        <Button Grid.Column="2" Grid.Row="2">Button 9 (Bottom Right)</Button>
    </Grid>
</Window>
